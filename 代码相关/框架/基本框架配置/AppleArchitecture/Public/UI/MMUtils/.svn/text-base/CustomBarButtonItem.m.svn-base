#import "CustomBarButtonItem.h"

@interface CustomBarButtonItem ()

@property (nonatomic, strong) UIButton *buttonView;

@end

@implementation CustomBarButtonItem
//@synthesize buttonView;

-(id)initBarButtonWithTarget:(id)target NormalImage:(NSString *)normalImage HightedImage:(NSString *)hightdImage action:(SEL)action{
    
    UIButton *buttonView = [[UIButton alloc] initWithFrame:CGRectMake(0, 0, 44, 44)];
    
    [buttonView setImage:[UIImage imageNamed:normalImage] forState:UIControlStateNormal];
    [buttonView setImage:[UIImage imageNamed:hightdImage] forState:UIControlStateHighlighted];
    
    [buttonView addTarget:target action:action forControlEvents:UIControlEventTouchUpInside];
    self = [self initWithCustomView:buttonView];
    
    if(self){
        [self setButtonView:buttonView];
    }
    return self;
}

-(id)initBarButtonWithTarget:(id)target TitleText:(NSString *)titleText action:(SEL)action
{
    UIButton *buttonView = [UIButton buttonWithType:UIButtonTypeCustom];
    buttonView.frame = CGRectMake(0, 0, 44, 44);
    [buttonView setBackgroundColor:[UIColor clearColor]];
    
    [buttonView setTitle:titleText forState:UIControlStateNormal];
    [buttonView setTitleColor:[UIColor colorWithRed:239.0/255.0 green:101.0/255.0 blue:26.0/255.0 alpha:1.0] forState:UIControlStateNormal];
    
    [buttonView setTitle:titleText forState:UIControlStateHighlighted];
    [buttonView setTitleColor:[UIColor colorWithRed:211.0/255.0 green:98.0/255.0 blue:41.0/255.0 alpha:1.0] forState:UIControlStateHighlighted];
    
    [buttonView addTarget:target action:action forControlEvents:UIControlEventTouchUpInside];
    self = [self initWithCustomView:buttonView];
    
    if(self){
        [self setButtonView:buttonView];
    }
    return self;
}

@end
